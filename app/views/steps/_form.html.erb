<%= simple_form_for(@step) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.input :start %>
    <%= f.input :finish %>
    <%= f.input :status %>
    <%= f.input :wish_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
