<%= simple_form_for([@category, @wish, @step]) do |f| %>
<%= f.error_notification %>
<div class="list-group-item row">
  <div class="form-inputs col-xs-10">
    <%= f.input :title, required: true, label: false,input_html: {class: 'form-control'}, placeholder: 'Make a step' %>
  </div>

  <div class="form-actions col-xs-2">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
