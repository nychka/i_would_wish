<%= simple_form_for([@category, @wish], html: {multipart: true, form: 'horizontal'}) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :title, input_html: {class: 'form-control'}, required: true %>
</div>
<div class="form-inputs row">
  <div class="col-xs-3">
    <%= f.file_field :image,label: 'Image', input_html: {class: 'form-control'}, required: true %>
  </div>
  <div class="col-xs-2">or add image url:</div>
  <div class="col-xs-7">
    <%= f.input :remote_image_url, label: false, input_html: {class: 'form-control'}, placeholder: 'image url' %>
  </div>
</div>
<div class="form-inputs">
  <%= f.input :body, input_html: {class: 'form-control'}, label: 'Description' %>
</div>

<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-primary form-control', value: t("submit_text") %>
</div>
<% end %>
